    <extensions defaultExtensionNs="com.intellij">
        <fileType id="antlr.new.fileType" name="Antlr grammar" language="Antlr-Tool" extensions="g4" fieldName="INSTANCE"
                  implementationClass="com.antlr.language.AntlrFileType"/>
        <lang.syntaxHighlighterFactory
                implementationClass="com.antlr.language.AntlrSyntaxHighlighterFactory"
                language="Antlr-Tool" id="antlr.new.antlrHighlighterFactory"/>
        <lang.commenter id="antlr.new.lang.commenter" language="Antlr-Tool" implementationClass="com.antlr.language.AntlrCommenter"/>
        <indexPatternBuilder id="antlr.new.index.pattern.builder" implementation="com.antlr.language.psi.AntlrIndexPatternBuilder"/>
        <lang.braceMatcher id="antlr.new.lang,brace.matcher" language="Antlr-Tool"
                           implementationClass="com.antlr.language.editor.AntlrBraceMatcher"/>
        <colorSettingsPage id="antlr.new.color.setting.page" implementation="com.antlr.setting.configdialogs.AntlrColorsPage"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/ANTLRv4Default.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/ANTLRv4Darcula.xml"/>
        <lang.parserDefinition id="antlr.new.lang.parser.definition" language="Antlr-Tool"
                               implementationClass="com.antlr.language.AntlrParserDefinition"/>
        <lang.ast.factory id="antlr.new.lang.ast.factory" language="Antlr-Tool" implementationClass="com.antlr.language.psi.AntlrASTFactory"/>
        <lang.psiStructureViewFactory id="antlr.new.lang.psi.structure.view.factory" language="Antlr-Tool"
                                      implementationClass="com.antlr.language.structView.AntlrStructureViewFactory"/>
        <lang.foldingBuilder id="antlr.new.lang.folding.builder" language="Antlr-Tool"
                             implementationClass="com.antlr.language.folding.AntlrFoldingBuilder"/>
        <iconProvider id="antlr.new.icon.provider"  implementation="com.antlr.language.AntlrIconProvider"/>

        <externalAnnotator  id="antlr.new.external.annotator" language="Antlr-Tool" implementationClass="com.antlr.language.AntlrExternalAnnotator"/>
        <lang.findUsagesProvider id="antlr.new.lang.find.useges.provider" language="Antlr-Tool"
                                 implementationClass="com.antlr.provider.AntlrFindUsagesProvider"/>

        <defaultLiveTemplates file="/liveTemplates/lexer/user.xml"/>
        <liveTemplateContext id="antlr.new.live.template.antlr.gerner.context" implementation="com.antlr.templates.AntlrGenericContext"
                             contextId="ANTLR-Tool"/>
        <liveTemplateContext id="antlr.new.live.template.outside.rule.context" implementation="com.antlr.templates.OutsideRuleContext"
                             contextId="ANTLR_OUTSIDE-Tool"/>
        <projectConfigurable groupId="language"
                             id="antlr.new.intellij.plugin.configdialogs.ANTLRv4ProjectSettings"
                             displayName="ANTLR V4 Default Project Settings"
                             instance="com.antlr.setting.configdialogs.AntlrProjectSettings"/>
        <projectService id="antlr.new.antlr.grammar.propertioes.component"
                serviceImplementation="com.antlr.setting.configdialogs.AntlrToolGrammarPropertiesComponent"/>
        <lang.refactoringSupport  id="antlr.new.refactoring.support" language="Antlr-Tool"
                                 implementationClass="com.antlr.refactor.AntlrRefactoringSupport"/>

        <notificationGroup displayType="BALLOON" id="antlr.new.notify.group"/>
        <errorHandler id="antlr.new.error.report" implementation="com.antlr.report.AntlrErrorReportSubmitter"/>
        <toolWindow factoryClass="com.antlr.toolwindow.PreViewWindow" id="antlr.pre.view.window" anchor="bottom">

        </toolWindow>
    </extensions>
